---
// Custom header that replaces the default Starlight header
// Uses the same Navbar component as regular Astro pages for consistency
import Navbar from './Navbar.astro';
---

<!-- Use the same Navbar component across both MDX and Astro pages -->
<div class="starlight-header-wrapper">
  <Navbar />
</div>

<style>
  /* Ensure proper positioning and styling when used in Starlight context */
  .starlight-header-wrapper {
    position: sticky;
    top: 0;
    z-index: 1000;
    width: 100%;
  }
  
  /* Adjust any Starlight-specific layout considerations */
  :global(.sidebar) {
    margin-top: 0 !important;
    padding-top: 1rem !important;
  }
  
  :global(.content) {
    margin-top: 0 !important;
    padding-top: 1rem !important;
  }
</style>

<style>
  .dropdown {
    position: relative;
    display: inline-block;
  }

  .dropdown-trigger {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    background: none;
    border: none;
    color: var(--sl-color-text);
    font-size: var(--sl-text-base);
    cursor: pointer;
    padding: 0.25rem 0.5rem;
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: var(--sl-color-bg);
    min-width: 180px;
    box-shadow: var(--sl-shadow-md);
    z-index: 1000;
    border-radius: 0.25rem;
    border: 1px solid var(--sl-color-hairline);
  }

  .dropdown-content a {
    color: var(--sl-color-text);
    padding: 0.5rem 1rem;
    text-decoration: none;
    display: block;
  }

  .dropdown-content a:hover {
    background-color: var(--sl-color-gray-2);
    color: var(--sl-color-text-accent);
  }

  /* Navbar container styling */
  .custom-navbar {
    position: relative;
    z-index: 1000;
    border-bottom: 1px solid var(--sl-color-hairline);
  }

  .navbar-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 1rem;
    gap: 2rem;
  }

  .navbar-brand a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--sl-color-text-accent);
    text-decoration: none;
    font-size: 1.25rem;
    font-weight: bold;
  }

  .navbar-center {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .navbar-menu {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .navbar-menu a {
    color: var(--sl-color-text);
    text-decoration: none;
    transition: color 0.2s;
    padding: 0.25rem 0.5rem;
  }

  .navbar-menu a:hover {
    color: var(--sl-color-text-accent);
  }

  .navbar-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .search-container {
    min-width: 200px;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .navbar-center {
      display: none;
    }
    
    .navbar-container {
      justify-content: space-between;
    }
  }

  /* Override Starlight search styles to fit our navbar */
  :global(.search-container .search) {
    position: relative;
    z-index: 1001;
  }
  
  :global(.search-container .search input) {
    border: none;
  }
</style>
