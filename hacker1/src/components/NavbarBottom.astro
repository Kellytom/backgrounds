<style>
/* Floating bottom navbar styles */
.custom-navbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(26, 26, 26, 0.95);
  backdrop-filter: blur(10px);
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding: 0.75rem 0;
  z-index: 9999;
  box-shadow: 0 -2px 20px rgba(0, 0, 0, 0.3);
}

.navbar-container {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 1rem;
}

.navbar-menu-horizontal {
  display: flex;
  gap: 2rem;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
}

.navbar-menu-horizontal a {
  color: #ccc;
  text-decoration: none;
  transition: all 0.3s ease;
  padding: 0.5rem 1rem;
  border-radius: 6px;
  font-weight: 500;
  white-space: nowrap;
}

.navbar-menu-horizontal a:first-child {
  color: #fff;
  font-weight: bold;
  font-size: 1.1rem;
  background: rgba(255, 255, 255, 0.1);
}

.navbar-menu-horizontal a:hover {
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-1px);
}

.navbar-menu-horizontal a:first-child:hover {
  background: rgba(255, 255, 255, 0.2);
}

/* Add padding to body to prevent content overlap */
:global(body) {
  padding-bottom: 80px !important;
}

/* Responsive design */
@media (max-width: 768px) {
  .navbar-menu-horizontal {
    gap: 1rem;
    font-size: 0.9rem;
  }
  
  .navbar-menu-horizontal a {
    padding: 0.4rem 0.8rem;
  }
  
  :global(body) {
    padding-bottom: 100px !important;
  }
}

@media (max-width: 480px) {
  .navbar-menu-horizontal {
    gap: 0.5rem;
    font-size: 0.8rem;
  }
  
  .navbar-menu-horizontal a {
    padding: 0.3rem 0.6rem;
  }
}
</style>
