---
// Enhanced navbar using astro-navbar with Starlight search and theme toggle
import Search from '@astrojs/starlight/components/Search.astro';
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems } from "astro-navbar";
---

<div class="custom-navbar floating-bottom">
  <div class="navbar-container">
    <Astronav closeOnClick>
      <!-- Left side navigation -->
      <div class="navbar-brand">
        <a href="/" with-base class="brand-link">Hacker1</a>
      </div>
      
      <MenuItems class="navbar-menu-horizontal">
        <div class="menu-items-wrapper">
          <a href="/" with-base class="nav-item">Home</a>
          
          <Dropdown class="dropdown">
            <button class="dropdown-toggle">
              <span>Designs</span>
            </button>
            <DropdownItems class="dropdown-menu">
              <div class="dropdown-content">
                <a href="/bulma" with-base class="dropdown-item">Bulma Demo</a>
                <a href="/markdown-demo" with-base class="dropdown-item">Markdown Demo</a>
              </div>
            </DropdownItems>
          </Dropdown>
          
          <a href="/backgrounds" with-base class="nav-item">Backgrounds</a>
          <a href="/starlight-showcase" with-base class="nav-item">Starlight</a>
          <a href="/daisyui-showcase" with-base class="nav-item">DaisyUI</a>
          <a href="/starlight-css-guide" with-base class="nav-item">CSS Guide</a>
        </div>
      </MenuItems>
      
      <!-- Right side actions -->
      <div class="navbar-actions">
        <div class="search-container">
          <Search />
        </div>
        <div class="theme-container">
          <span class="theme-icon">ðŸŒ™</span>
          <div class="theme-dropdown">
            <select id="theme-select" class="theme-select">
              <option value="auto">Auto</option>
              <option value="light">Light</option>
              <option value="dark">Dark</option>
            </select>
          </div>
        </div>
      </div>
    </Astronav>
  </div>
</div>

<script>
  // Theme switching functionality
  const themeSelect = document.getElementById('theme-select');
  
  // Get current theme from localStorage or default to 'auto'
  const getCurrentTheme = () => {
    return localStorage.getItem('starlight-theme') || 'auto';
  };
  
  // Set theme in localStorage and apply to document
  const setTheme = (theme: string) => {
    localStorage.setItem('starlight-theme', theme);
    
    if (theme === 'auto') {
      document.documentElement.removeAttribute('data-theme');
    } else {
      document.documentElement.setAttribute('data-theme', theme);
    }
  };
  
  // Initialize theme on page load
  const initTheme = () => {
    const currentTheme = getCurrentTheme();
    if (themeSelect) {
      (themeSelect as HTMLSelectElement).value = currentTheme;
    }
    setTheme(currentTheme);
  };
  
  // Handle theme change
  if (themeSelect) {
    themeSelect.addEventListener('change', (e) => {
      const target = e.target as HTMLSelectElement;
      if (target) {
        setTheme(target.value);
      }
    });
  }
  
  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTheme);
  } else {
    initTheme();
  }
</script>

<style>
/* Floating bottom navbar styles using astro-navbar */
.custom-navbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(26, 26, 26, 0.95);
  backdrop-filter: blur(10px);
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding: 0.75rem 0;
  z-index: 9999;
  box-shadow: 0 -2px 20px rgba(0, 0, 0, 0.3);
}

.navbar-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

/* Astronav component styling */
.navbar-container :global(.astronav) {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 1rem;
}

/* Brand styling */
.navbar-brand {
  flex-shrink: 0;
}

.brand-link {
  color: #fff !important;
  font-weight: bold;
  font-size: 1.1rem;
  background: rgba(255, 255, 255, 0.1);
  padding: 0.5rem 0.8rem;
  border-radius: 6px;
  text-decoration: none;
  transition: all 0.3s ease;
}

.brand-link:hover {
  background: rgba(255, 255, 255, 0.2);
}

/* MenuItems styling */
.navbar-container :global(.navbar-menu-horizontal) {
  flex: 1;
  display: flex;
  justify-content: flex-start;
}

.menu-items-wrapper {
  display: flex;
  gap: 1.5rem;
  align-items: center;
  flex-wrap: nowrap;
  overflow-x: auto;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.menu-items-wrapper::-webkit-scrollbar {
  display: none;
}

.nav-item {
  color: #ccc;
  text-decoration: none;
  transition: all 0.3s ease;
  padding: 0.5rem 0.8rem;
  border-radius: 6px;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
}

.nav-item:hover {
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-1px);
}

/* Dropdown styles for astro-navbar */
.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-toggle {
  background: none;
  border: none;
  color: #ccc;
  cursor: pointer;
  padding: 0.5rem 0.8rem;
  border-radius: 6px;
  font-weight: 500;
  font-size: inherit;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.dropdown-toggle:hover {
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-1px);
}

/* astro-navbar dropdown styling */
.navbar-container :global(.dropdown[open] .dropdown-toggle),
.navbar-container :global(.dropdown[aria-expanded="true"] .dropdown-toggle) {
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-1px);
}

.dropdown-content {
  position: absolute;
  bottom: 100%;
  left: 0;
  background: rgba(26, 26, 26, 0.95);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 6px;
  padding: 0.5rem 0;
  margin-bottom: 0.5rem;
  min-width: 150px;
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.3);
  z-index: 10002;
}

.dropdown-item {
  display: block;
  color: #ccc;
  text-decoration: none;
  padding: 0.5rem 1rem;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.dropdown-item:hover {
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
}

/* Hide astro-navbar dropdown menu by default */
.navbar-container :global(.dropdown-menu) {
  display: none;
}

/* Show dropdown when open (astro-navbar handles this) */
.navbar-container :global(.dropdown[open] .dropdown-menu),
.navbar-container :global(.dropdown[aria-expanded="true"] .dropdown-menu) {
  display: block;
}

/* Right side actions */
.navbar-actions {
  display: flex;
  align-items: center;
  gap: 1rem;
  position: relative;
  z-index: 10000;
  flex-shrink: 0;
}

/* Search and theme components styling */
.search-container {
  min-width: 200px;
  position: relative;
  z-index: 10001;
}

.theme-container {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  position: relative;
  z-index: 10001;
  pointer-events: auto;
}

.theme-icon {
  font-size: 1.2rem;
  opacity: 0.8;
  transition: opacity 0.3s;
}

.theme-container:hover .theme-icon {
  opacity: 1;
}

/* Override Starlight search styles to fit our navbar */
.search-container :global(.search) {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 6px;
  position: relative;
  z-index: 10001;
}

.search-container :global(.search input) {
  background: transparent;
  color: #fff;
  border: none;
  padding: 0.5rem 1rem;
}

.search-container :global(.search input::placeholder) {
  color: rgba(255, 255, 255, 0.6);
}

/* Theme dropdown styles */
.theme-dropdown {
  position: relative;
}

.theme-select {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 4px;
  color: #fff;
  padding: 0.4rem 0.8rem;
  cursor: pointer;
  font-size: 0.9rem;
  z-index: 10001;
  position: relative;
}

.theme-select option {
  background: #2a2a2a;
  color: #fff;
}

/* Add padding to body to prevent content overlap */
:global(body) {
  padding-bottom: 80px !important;
}

/* Override Starlight sidebar z-index and height with scrolling */
:global(.sidebar) {
  z-index: 100 !important;
  height: calc(100vh - 120px) !important;
  max-height: calc(100vh - 120px) !important;
  overflow-y: auto !important;
  overflow-x: hidden !important;
  scrollbar-width: thin !important;
  scrollbar-color: rgba(255, 255, 255, 0.3) transparent !important;
}

:global(.sidebar-content) {
  z-index: 100 !important;
  height: 100% !important;
  max-height: 100% !important;
  overflow-y: auto !important;
  overflow-x: hidden !important;
  padding-bottom: 1rem !important;
}

:global(.sidebar-pane) {
  height: calc(100vh - 120px) !important;
  max-height: calc(100vh - 120px) !important;
  overflow-y: auto !important;
  overflow-x: hidden !important;
}

:global(.right-sidebar) {
  height: calc(100vh - 120px) !important;
  max-height: calc(100vh - 120px) !important;
  overflow-y: auto !important;
  overflow-x: hidden !important;
}

/* Custom scrollbar styling for webkit browsers */
:global(.sidebar::-webkit-scrollbar) {
  width: 6px !important;
}

:global(.sidebar::-webkit-scrollbar-track) {
  background: transparent !important;
}

:global(.sidebar::-webkit-scrollbar-thumb) {
  background: rgba(255, 255, 255, 0.3) !important;
  border-radius: 3px !important;
}

:global(.sidebar::-webkit-scrollbar-thumb:hover) {
  background: rgba(255, 255, 255, 0.5) !important;
}

/* Ensure sidebar navigation items are properly spaced */
:global(.sidebar nav) {
  padding-bottom: 2rem !important;
}

:global(.sidebar ul) {
  max-height: none !important;
  overflow: visible !important;
}

/* Add the required .hidden class for astro-navbar */
.hidden {
  display: none;
}

/* Responsive design - maintain single line */
@media (max-width: 768px) {
  .navbar-container {
    gap: 0.5rem;
  }
  
  .menu-items-wrapper {
    gap: 1rem;
    font-size: 0.9rem;
  }
  
  .nav-item,
  .dropdown-toggle {
    padding: 0.4rem 0.6rem;
    font-size: 0.9rem;
  }
  
  .search-container {
    min-width: 150px;
  }
  
  :global(body) {
    padding-bottom: 100px !important;
  }
}

@media (max-width: 480px) {
  .menu-items-wrapper {
    gap: 0.5rem;
    font-size: 0.8rem;
  }
  
  .nav-item,
  .dropdown-toggle {
    padding: 0.3rem 0.5rem;
    font-size: 0.8rem;
  }
  
  .search-container {
    min-width: 120px;
  }
  
  .theme-select {
    padding: 0.3rem 0.5rem;
    font-size: 0.8rem;
  }
}
</style>
