  color: #222;
}
.hamburger {
  display: none;
  flex-direction: column;
  justify-content: center;
  width: 2.5em;
  height: 2.5em;
  cursor: pointer;
  margin-left: 1em;
  z-index: 2000;
  background: none;
  border: none;
}
.hamburger span {
  display: block;
  height: 4px;
  width: 28px;
  background: #fff;
  margin: 5px 0;
  border-radius: 2px;
  transition: 0.3s;
}
