.navbar-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}
.navbar-left {
  display: flex;
  align-items: center;
}
.navbar-brand {
  color: #fff;
  font-size: 1.5em;
  font-weight: bold;
  margin-right: .2rem;
  letter-spacing: 1px;
}
.menu {
  display: flex;
  flex-wrap: wrap;
  list-style: none;
  margin: 0;
  padding: 0;
}
.menu > li {
  position: relative;
}
.menu > li > a {
  display: block;
  padding: .5em .55em;
  color: #fff;
  text-decoration: none;
  transition: background 0.2s;
