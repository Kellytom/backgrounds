}
.dropdown-toggle {
  background: none;
  border: none;
  color: #fff;
  font: inherit;
  padding: 1em 1.5em;
  cursor: pointer;
  transition: background 0.2s;
}
.dropdown-toggle:hover,
.dropdown-toggle:focus {
  background: #444;
}
.submenu {
  display: none;
  position: absolute;
  left: 0;
  top: 100%;
  background: #333;
  min-width: 180px;
  list-style: none;
  margin: 0;
  padding: 0;
  z-index: 1000;
}
.submenu li a {
  display: block;
  padding: 0.75em 1.5em;
  color: #fff;
  text-decoration: none;
  transition: background 0.2s;
}
.submenu li a:hover {
  background: #555;
}
.menu > li:hover .submenu,
.menu > li:focus-within .submenu {
  display: block;
}
.navbar-right {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-left: 2rem;
}
.search-form input[type="search"] {
  padding: 0.5em 1em;
  border-radius: 4px;
  border: none;
  font-size: 1em;
  outline: none;
}
