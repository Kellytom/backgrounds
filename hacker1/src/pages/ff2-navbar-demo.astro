        /* Essential hidden class for astro-navbar */
        .hidden {
            display: none;
        }
        
        /* FORCE HORIZONTAL LAYOUT - override all conflicts */
        .astronav-items {
            display: flex !important;
            flex-direction: row !important;
            align-items: center !important;
        }
        
        .astronav-items ul {
            display: flex !important;
            flex-direction: row !important;
            align-items: center !important;
            list-style: none !important;
            margin: 0 !important;
            padding: 0 !important;
        }
        
        .astronav-items li {
            display: inline-block !important;
            margin: 0 !important;
            padding: 0 !important;
        }
        
        /* FIX DROPDOWN VISIBILITY - Remove "hidden" class when dropdown is open */
        .astronav-dropdown[open] .dropdown-toggle {
            display: block !important;
        }
        
        .astronav-dropdown.open .dropdown-toggle {
            display: block !important;
        }
        
        /* Initially hide dropdown items */
        .dropdown-toggle {
            display: none;
        }
        
        /* Show dropdown when open */
        .astronav-dropdown[aria-expanded="true"] .dropdown-toggle {
            display: block !important;
        }
        
        /* Submenu positioning and visibility */
        .astronav-dropdown-submenu[open] .dropdown-toggle,
        .astronav-dropdown-submenu.open .dropdown-toggle,
        .astronav-dropdown-submenu[aria-expanded="true"] .dropdown-toggle {
            display: block !important;
        }
        
