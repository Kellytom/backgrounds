<style>
  /* Frames container styles - integrates with site navbar */
  .frames-container {
    background-color: rgba(0, 0, 0, 0.5);
    margin: 0;
    padding: 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
    font-family: 'Georgia', serif;
    color: #333;
    max-width: none;
  }
  
  /* Card styles for Bible quote frames */
  .card {
    width: 90%;
    margin-bottom: 40px;
    padding: 30px 30px 45px 30px; /* Bottom padding is 1.5x top */
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    position: relative;
  }
  
  .inner-card {
    padding: 20px;
    border: 2pt solid white;
    position: relative;
    z-index: 1;
  }
  
  .inner-card::before {
    content: '';
    position: absolute;
    top: -4px;
    left: -4px;
    right: -4px;
    bottom: -4px;
    border: 2px solid #ccc;
    z-index: -1;
    transform: translateZ(-1px);
    box-shadow: 
      inset 0 5px 8px rgba(255, 255, 255, 0.4), /* Stronger top shadow */
      inset 0 -3px 5px rgba(0, 0, 0, 0.3), /* Lighter bottom shadow */
      inset 3px 0 5px rgba(255, 255, 255, 0.2),
      inset -3px 0 5px rgba(0, 0, 0, 0.2);
  }
  
  .quote {
    font-size: 1.2em;
    line-height: 1.6;
    margin: 0;
  }
  
  .reference {
    font-size: 0.9em;
    color: #555;
    margin-top: 10px;
    text-align: right;
  }
  
  .italic {
    font-style: italic;
  }

  /* Pastel colors inspired by Shades_of_Pastel.webp keywords */
  .border-pale-blue { background-color: #e6f0fa; }
  .border-pale-green { background-color: #e8f5e9; }
  .border-pale-tan { background-color: #f5f5dc; }
  .border-pale-yellow { background-color: #fffde7; }
  .border-pale-purple { background-color: #f3e5f5; }
  .bg-pale-blue { background-color: #e3f2fd; }
  .bg-pale-green { background-color: #f1f8e9; }
  .bg-pale-tan { background-color: #faf0e6; }
  .bg-pale-yellow { background-color: #fff9c4; }
  .bg-pale-purple { background-color: #ede7f6; }

  /* Responsive font size adjustments */
  @media (max-width: 600px) {
    .quote {
      font-size: 1em;
    }
    .reference {
      font-size: 0.8em;
    }
    .card {
      padding: 20px 20px 30px 20px; /* Maintain 1.5x bottom padding */
    }
    .inner-card {
      padding: 15px;
    }
  }
</style>
